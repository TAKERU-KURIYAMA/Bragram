<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-md-6">
      <div class = "row">
        <div class = "col-12 text-center">
          <h1>投稿を検索</h1>
          <%= search_form_for @q, url: search_posts_path do |f| %>
           　<%= f.text_field :title_or_body_cont, class: "search-form", placeholder: "キーワード検索" %>
             <%= f.submit "検索", class: "search-btn" %>
          <% end %>
        </div>
        <div class = "col-12 text-center">
          <h1>タグ一覧</h1>
          <% @tags.each do |tag| %>
            <button type="button" class="btn btn-outline-primary btn-sm"><%= link_to tag, posts_path(tag_name: tag) %></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
