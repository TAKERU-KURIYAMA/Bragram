<div class = "container">
  <div class = "row">
    <div class = "col">
      <div class = "row">
        <div class = "col">
        </div>
        <div class = "col">
         <b><%= link_to @post.user.name, user_path(@post.user_id) %></b>
        </div>
      </div>
      <div class = "row">
        <div class = "col">
          <%= @post.title %>
        </div>
      </div>
      <div class = "row">
        <div class = "col">
          <%= image_tag @post.image, size: "200x200" %>
        </div>
      </div>
      <div class = "row">
        <div class = "col">
          <%= @post.body %>
        </div>
      </div>
      <div class = "row">
        <div class = "col">
          <p>コメント件数：<%= @post.post_comments.count %></p>
            <% @post.post_comments.each do |post_comment| %>
              <p><%= image_tag post_comment.user.get_profile_image, size:"40x40" %></p>
              <%= post_comment.user.name %>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
            <% end %>
        </div>
        <div class = "col">
          <%= form_with model: [@post, @post_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
